# AutomationX TTS Ayarlari
HOST=0.0.0.0
PORT=7778
LOG_TYPE=console

# ===========================================
# ON-DEMAND PROXY
# ===========================================
# Container bu sure (saniye) idle kalirsa otomatik kapanir
# 300 = 5 dakika (varsayilan)
# 600 = 10 dakika
IDLE_TIMEOUT=300

# Container baslatma timeout (saniye)
STARTUP_TIMEOUT=120

# ===========================================
# AUDIO PROCESSING
# ===========================================

# Highpass - 80Hz alti kesilir (ugultu temizligi)
HIGHPASS_FREQ=80

# Lowpass - 10000Hz ustu kesilir (tislama temizligi)
LOWPASS_FREQ=10000

# Noise Gate - sessiz kismlardaki parazit temizligi
# -50 dB = yumusak, -30 dB = sert
NOISE_GATE_THRESHOLD=-45

# Normalize - ses seviyesini optimize eder (True/False)
NORMALIZE_AUDIO=True

# ===========================================
# CHUNKING
# ===========================================
MAX_CHUNK_CHARS=200
SILENCE_BETWEEN_CHUNKS_MS=150
FADE_MS=30